{
  "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "target": "es2017",
      "module": "es2020", 
      "strict": true,
      "jsx": "react-native",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
    , "app/index.js"  ]
}
